{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if description %}
      <div class="author-list-description">{{ description }}</div>
      <hr>
      {% endif %}
      
      {% if authors %}
      <div class="row authors-list">
        {% for author in authors %}
        <div class="col-lg-4 col-md-4 col-sm-6">
          <div class="author-thumb text-center">
            <div class="image">
              <a href="{{ author.href }}">
                <img src="{{ author.thumb }}" alt="{{ author.name }}" title="{{ author.name }}" class="img-responsive img-circle" />
              </a>
            </div>
            <div class="caption">
              <h4><a href="{{ author.href }}">{{ author.name }}</a></h4>
              {% if author.job_title %}
              <p class="job-title">{{ author.job_title }}</p>
              {% endif %}
              {% if author.bio %}
              <p class="bio">{{ author.bio }}</p>
              {% endif %}
              <p class="article-count">{{ text_article_count|format(author.article_count) }}</p>
              <a href="{{ author.href }}" class="btn btn-primary">{{ text_all_authors }}</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <p>Авторы не найдены.</p>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}