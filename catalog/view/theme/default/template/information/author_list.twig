{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      
      {% if authors %}
      <div class="row authors-list">
        {% for author in authors %}
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div class="author-thumb">
            <div class="image">
              <a href="{{ author.href }}"><img src="{{ author.image }}" alt="{{ author.name }}" title="{{ author.name }}" class="img-responsive" /></a>
            </div>
            <div class="caption">
              <h4><a href="{{ author.href }}">{{ author.name }}</a></h4>
              {% if author.job_title %}
              <p class="job-title">{{ author.job_title }}</p>
              {% endif %}
              <p class="bio">{{ author.bio }}</p>
              <div class="author-meta">
                <span class="articles-count badge">{{ text_articles_count|format(author.total_articles) }}</span>
              </div>
              <a href="{{ author.href }}" class="btn btn-primary">{{ button_view_author }}</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <div class="text-center">
        <p>{{ text_no_authors }}</p>
      </div>
      {% endif %}
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}