<script>
// Простой и надежный код для управления полем рейтинга
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM загружен, инициализируем поле рейтинга (резервный код)');
    
    var schemaSelect = document.getElementById('input-schema-type');
    var ratingField = document.getElementById('rating-field');
    var ratingInput = document.getElementById('input-rating-value');
    
    if (!schemaSelect || !ratingField) {
        console.error('Не найдены необходимые элементы для управления рейтингом');
        return;
    }
    
    function updateRatingField() {
        console.log('Обновление поля рейтинга, выбран тип:', schemaSelect.value);
        
        if (schemaSelect.value === 'Review') {
            ratingField.style.display = 'block';
            if (ratingInput) {
                ratingInput.required = true;
            }
            console.log('Поле рейтинга показано');
        } else {
            ratingField.style.display = 'none';
            if (ratingInput) {
                ratingInput.required = false;
            }
            console.log('Поле рейтинга скрыто');
        }
    }
    
    // Инициализация при загрузке
    updateRatingField();
    
    // Обработчик изменений
    schemaSelect.addEventListener('change', updateRatingField);
    
    console.log('Резервный код управления рейтингом успешно инициализирован');
});
</script>
