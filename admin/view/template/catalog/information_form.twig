// Используем jQuery для совместимости с остальным кодом OpenCart
$(document).ready(function() {
    console.log('DOM готов');
    
    function toggleRatingField() {
        var schemaType = $('#input-schema-type').val();
        console.log('Текущий тип разметки:', schemaType);
        
        if (schemaType === 'Review') {
            console.log('Показываем поле рейтинга');
            $('#rating-field').show();
            $('#input-rating-value').prop('required', true);
        } else {
            console.log('Скрываем поле рейтинга');
            $('#rating-field').hide();
            $('#input-rating-value').prop('required', false);
        }
    }
    
    // Инициализация при загрузке
    toggleRatingField();
    
    // Обработчик изменения типа разметки
    $('#input-schema-type').on('change', function() {
        console.log('Тип разметки изменен на:', $(this).val());
        toggleRatingField();
    });
    
    // Валидация при отправке формы
    $('#form-information').on('submit', function(e) {
        if ($('#input-schema-type').val() === 'Review') {
            var ratingValue = $('#input-rating-value').val();
            
            if (!ratingValue || ratingValue.trim() === '') {
                alert('Для типа Review необходимо указать значение рейтинга');
                $('#input-rating-value').focus();
                e.preventDefault();
                return false;
            }
            
            var rating = parseFloat(ratingValue);
            if (isNaN(rating) || rating < 1 || rating > 5) {
                alert('Значение рейтинга должно быть числом от 1 до 5');
                $('#input-rating-value').focus();
                e.preventDefault();
                return false;
            }
        }
        return true;
    });
    
    // Обновление при переключении вкладок
    $('a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
        if ($(e.target).attr('href') === '#tab-schema') {
            console.log('Переключились на вкладку микроразметки');
            toggleRatingField();
        }
    });
});

