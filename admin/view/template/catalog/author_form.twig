{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-author" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-author" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-data" data-toggle="tab">{{ tab_data }}</a></li>
            <li><a href="#tab-microdata" data-toggle="tab">Микроразметка</a></li>
            <li><a href="#tab-seo" data-toggle="tab">{{ tab_seo }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-name{{ language.language_id }}">{{ entry_name }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="author_description[{{ language.language_id }}][name]" value="{{ author_description[language.language_id] ? author_description[language.language_id].name }}" placeholder="{{ entry_name }}" id="input-name{{ language.language_id }}" class="form-control" />
                      {% if error_name[language.language_id] %}
                      <div class="text-danger">{{ error_name[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description{{ language.language_id }}">{{ entry_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="author_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ author_description[language.language_id] ? author_description[language.language_id].description }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-job-title{{ language.language_id }}">Должность</label>
                    <div class="col-sm-10">
                      <input type="text" name="author_description[{{ language.language_id }}][job_title]" value="{{ author_description[language.language_id] ? author_description[language.language_id].job_title }}" placeholder="Должность автора" id="input-job-title{{ language.language_id }}" class="form-control" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-bio{{ language.language_id }}">Краткая биография</label>
                    <div class="col-sm-10">
                      <textarea name="author_description[{{ language.language_id }}][bio]" rows="5" placeholder="Краткая биография для отображения в статьях" id="input-bio{{ language.language_id }}" class="form-control">{{ author_description[language.language_id] ? author_description[language.language_id].bio }}</textarea>
                    </div>
                  </div>
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-meta-title{{ language.language_id }}">{{ entry_meta_title }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="author_description[{{ language.language_id }}][meta_title]" value="{{ author_description[language.language_id] ? author_description[language.language_id].meta_title }}" placeholder="{{ entry_meta_title }}" id="input-meta-title{{ language.language_id }}" class="form-control" />
                      {% if error_meta_title[language.language_id] %}
                      <div class="text-danger">{{ error_meta_title[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-description{{ language.language_id }}">{{ entry_meta_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="author_description[{{ language.language_id }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description{{ language.language_id }}" class="form-control">{{ author_description[language.language_id] ? author_description[language.language_id].meta_description }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-keyword{{ language.language_id }}">{{ entry_meta_keyword }}</label>
                    <div class="col-sm-10">
                      <textarea name="author_description[{{ language.language_id }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword{{ language.language_id }}" class="form-control">{{ author_description[language.language_id] ? author_description[language.language_id].meta_keyword }}</textarea>
                    </div>
                  </div>
                </div>
                {% endfor %}</div>
            </div>
            <div class="tab-pane" id="tab-data">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-image">{{ entry_image }}</label>
                <div class="col-sm-10"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                  <input type="hidden" name="image" value="{{ image }}" id="input-image" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="status" id="input-status" class="form-control">
                    {% if status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_store }}</label>
                <div class="col-sm-10">
                  <div class="well well-sm" style="height: 150px; overflow: auto;">
                    {% for store in stores %}
                    <div class="checkbox">
                      <label>
                        {% if store.store_id in author_store %}
                        <input type="checkbox" name="author_store[]" value="{{ store.store_id }}" checked="checked" />
                        {{ store.name }}
                        {% else %}
                        <input type="checkbox" name="author_store[]" value="{{ store.store_id }}" />
                        {{ store.name }}
                        {% endif %}
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-microdata">
              <div class="alert alert-info">
                <i class="fa fa-info-circle"></i> Настройки для микроразметки Schema.org (JSON-LD)
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-company-employee">Автор работает в компании сайта</label>
                <div class="col-sm-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="company_employee" value="1" {{ company_employee ? 'checked="checked"' : '' }} id="input-company-employee" />
                      Если включено, в микроразметке будет указана организация сайта
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group" id="affiliation-group">
                <label class="col-sm-2 control-label" for="input-affiliation">Организация автора</label>
                <div class="col-sm-10">
                  <input type="text" name="affiliation" value="{{ affiliation }}" placeholder="Название организации (если автор не работает в компании сайта)" id="input-affiliation" class="form-control" />
                  <small class="text-muted">Заполняется только если автор не работает в компании сайта</small>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-knows-about">Знает о (темы, через запятую)</label>
                <div class="col-sm-10">
                  <input type="text" name="knows_about" value="{{ knows_about }}" placeholder="Opencart, SEO, Marketing, Web Development" id="input-knows-about" class="form-control" />
                  <small class="text-muted">Темы, в которых автор разбирается. Например: Opencart, SEO, Marketing</small>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-knows-language">Знает языки (через запятую)</label>
                <div class="col-sm-10">
                  <input type="text" name="knows_language" value="{{ knows_language }}" placeholder="Russian, English, Spanish" id="input-knows-language" class="form-control" />
                  <small class="text-muted">Языки, которыми владеет автор. Например: Russian, English</small>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-same-as">Ссылки на соцсети и сайты</label>
                <div class="col-sm-10">
                  <textarea name="same_as" rows="4" placeholder="https://facebook.com/profile&#10;https://twitter.com/profile&#10;https://linkedin.com/in/profile" id="input-same-as" class="form-control">{{ same_as }}</textarea>
                  <small class="text-muted">Укажите ссылки на профили в социальных сетях и других сайтах (каждая ссылка с новой строки)</small>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-seo">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_keyword }}</div>
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ entry_store }}</td>
                      <td class="text-left">{{ entry_keyword }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  {% for store in stores %}
                  <tr>
                    <td class="text-left">{{ store.name }}</td>
                    <td class="text-left">{% for language in languages %}
                      <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                        <input type="text" name="author_seo_url[{{ store.store_id }}][{{ language.language_id }}]" value="{% if author_seo_url[store.store_id][language.language_id] %}{{ author_seo_url[store.store_id][language.language_id] }}{% endif %}" placeholder="{{ entry_keyword }}" class="form-control" />
                      </div>
                      {% if error_keyword[store.store_id][language.language_id] %}
                      <div class="text-danger">{{ error_keyword[store.store_id][language.language_id] }}</div>
                      {% endif %}
                      {% endfor %}</td>
                  </tr>
                  {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <link href="view/javascript/codemirror/lib/codemirror.css" rel="stylesheet" />
  <link href="view/javascript/codemirror/theme/monokai.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/codemirror/lib/codemirror.js"></script> 
  <script type="text/javascript" src="view/javascript/codemirror/lib/xml.js"></script> 
  <script type="text/javascript" src="view/javascript/codemirror/lib/formatting.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/summernote.min.js"></script>
  <link href="view/javascript/summernote/summernote.min.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 
  <script type="text/javascript">
  // Управление видимостью поля affiliation
  document.addEventListener('DOMContentLoaded', function() {
    const companyCheckbox = document.getElementById('input-company-employee');
    const affiliationGroup = document.getElementById('affiliation-group');
    
    function toggleAffiliation() {
      if (companyCheckbox.checked) {
        affiliationGroup.style.display = 'none';
      } else {
        affiliationGroup.style.display = 'flex';
      }
    }
    
    companyCheckbox.addEventListener('change', toggleAffiliation);
    toggleAffiliation(); // Инициализация при загрузке
  });

  $('#language a:first').tab('show');
  </script>
</div>
{{ footer }}