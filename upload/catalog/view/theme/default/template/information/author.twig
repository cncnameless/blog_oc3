{{ header }}
<div id="information-author" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li>
      {% if loop.last %}
        {{ breadcrumb.text }}
      {% else %}
        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      
      {# === ИНФОРМАЦИЯ ОБ АВТОРЕ === #}
      <div class="author-profile">
        <div class="row">
          <div class="col-md-4 text-center">
            <div class="author-image" style="margin-bottom: 20px;">
              <img src="{{ image }}" alt="{{ heading_title }}" style="width: 300px; height: 300px; border-radius: 50%; object-fit: cover; border: 4px solid #f8f9fa;">
            </div>
          </div>
          <div class="col-md-8">
            <h1>{{ heading_title }}</h1>
            {% if job_title %}
            <p class="author-job-title" style="font-size: 18px; color: #666; margin-bottom: 15px;">{{ job_title }}</p>
            {% endif %}
            
            {% if description %}
            <div class="author-description" style="margin-bottom: 20px;">
              <h3>{{ text_author_bio }}</h3>
              <div>{{ description }}</div>
            </div>
            {% endif %}
            
            {% if bio %}
            <div class="author-bio" style="margin-bottom: 20px;">
              <div>{{ bio }}</div>
            </div>
            {% endif %}
            
            <div class="author-stats" style="margin-bottom: 20px;">
              <span class="badge" style="background: #4ab2f1; font-size: 16px; padding: 8px 16px;">{{ article_total }} {{ text_articles_count }}</span>
            </div>
          </div>
        </div>
      </div>

      {# === СТАТЬИ АВТОРА === #}
      {% if articles %}
      <div class="author-articles" style="margin-top: 40px;">
        <h2>{{ text_articles_by_author }}</h2>
        <div class="row">
          {% for article in articles %}
          <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="blog-item" style="margin-bottom: 30px;">
              <div class="blog-image">
                <a href="{{ article.href }}"><img src="{{ article.image }}" alt="{{ article.title }}" class="img-responsive" style="width: 100%; height: 200px; object-fit: cover;" /></a>
              </div>
              <div class="blog-info" style="padding: 15px;">
                <h4><a href="{{ article.href }}">{{ article.title }}</a></h4>
                <p class="blog-meta" style="font-size: 12px; color: #666; margin-bottom: 10px;">
                  <span><i class="fa fa-calendar"></i> {{ article.date_added }}</span><br>
                  <span><i class="fa fa-eye"></i> {{ article.viewed }} {{ text_views }}</span> | 
                  <span><i class="fa fa-clock-o"></i> {{ article.reading_time }} {{ text_reading_time }}</span>
                </p>
                <p class="blog-description" style="font-size: 14px; line-height: 1.4;">{{ article.description }}</p>
                <a href="{{ article.href }}" class="btn btn-primary">{{ button_read_more }}</a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
      {% else %}
      <div class="alert alert-info" style="margin-top: 30px;">
        <p>У этого автора пока нет статей.</p>
      </div>
      {% endif %}

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}